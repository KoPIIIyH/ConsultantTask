<!-- Modal -->
<div class="modal fade" id="addBook" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Enter a name for the new book:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                <%= form_with scope: :book, method: 'post' do |f| %>
                    <%= f.text_field :name %>
                    <%= f.submit class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>