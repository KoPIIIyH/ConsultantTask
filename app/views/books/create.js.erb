//Создание книги
if ($('#books .empty').length) {
    $('#books .list-group').empty()
}
$("<%= j render partial: 'new_book', locals: {book: @book} %>").appendTo($('#books .list-group')).slideDown({
    start: function () {
        $('#books .btn').prop('disabled', true)
    },
    complete: function () {
        $('#books .btn').prop('disabled', false)
    }
})

//Скрытие модального окна
$('#addBook #book_name').val('')
$('#addBook').modal('hide')